<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
             android:layout_width="match_parent"
             android:layout_height="match_parent">

    <ImageView
        android:id="@+id/img_imagepicker_grid_content"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_gravity="center"
        android:scaleType="centerCrop"/>

    <View
        android:id="@+id/ck_imagepicker_grid_content"
        android:layout_width="@dimen/imagepicker_data_select_iconsize"
        android:layout_height="@dimen/imagepicker_data_select_iconsize"
        android:layout_alignParentRight="true"
        android:layout_alignParentTop="true"
        android:layout_gravity="top|right"
        android:background="@drawable/ck_imagepicker_grid_normal"/>

</FrameLayout>